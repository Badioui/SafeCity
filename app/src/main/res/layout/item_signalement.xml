<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/light_bg_secondary"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/light_text_primary"
            android:layout_centerVertical="true"
            android:contentDescription="Photo de profil utilisateur" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_profile"
            android:layout_marginStart="12dp"
            android:textColor="@color/light_text_primary"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="Citoyen ID: 123" />

        <TextView
            android:id="@+id/tv_category_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_profile"
            android:layout_below="@id/tv_username"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
            android:textColor="@color/light_text_secondary"
            tools:text="Accident de la route • Il y a 5h" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/status_new_bg"
            android:textColor="@color/white"
            tools:text="NOUVEAU" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_incident_photo"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:contentDescription="Photo de l'incident"
        android:background="@color/light_separator"
        android:src="@drawable/ic_incident_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/light_text_primary"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"
            tools:text="Gros accident impliquant deux voitures sur l'autoroute..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_open_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_map"
                app:tint="@android:color/holo_blue_light"
                android:padding="8dp"
                android:contentDescription="Localiser l'incident sur la carte" />

            <ImageButton
                android:id="@+id/btn_edit_incident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                app:tint="@color/light_text_secondary"
                android:padding="8dp"
                android:contentDescription="Modifier le signalement" />

            <ImageButton
                android:id="@+id/btn_delete_incident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                app:tint="@android:color/holo_red_dark"
                android:padding="8dp"
                android:contentDescription="Supprimer le signalement" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_simple_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/light_text_secondary"
                tools:text="Publié il y a 4 jours" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</com.google.android.material.card.MaterialCardView>