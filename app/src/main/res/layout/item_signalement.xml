<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    android:backgroundTint="@color/light_bg_secondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <!-- HEADER : Profil + Date + Status -->
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/light_text_primary"
            android:contentDescription="Photo de profil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/light_text_primary"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="Citoyen ID: 123"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            app:layout_constraintTop_toTopOf="@id/img_profile"
            app:layout_constraintEnd_toStartOf="@id/tv_status" />

        <TextView
            android:id="@+id/tv_category_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/light_text_secondary"
            tools:text="Accident â€¢ Il y a 5h"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="@id/tv_username" />

        <!-- CORRECTION ICI : Remplacement de l'attribut invalide -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/status_new_bg"
            android:textColor="@color/white"
            tools:text="NOUVEAU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_incident_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- IMAGE INCIDENT -->
        <ImageView
            android:id="@+id/img_incident_photo"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@color/light_separator"
            android:src="@drawable/ic_incident_placeholder"
            android:contentDescription="Photo de l'incident"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_profile" />

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="15sp"
            android:textColor="@color/light_text_primary"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="Description de l'incident..."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_incident_photo" />

        <!-- BOUTONS D'ACTION -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description">

            <ImageButton
                android:id="@+id/btn_open_map"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_map"
                app:tint="@android:color/holo_blue_light"
                android:padding="10dp"
                android:contentDescription="Carte" />

            <ImageButton
                android:id="@+id/btn_edit_incident"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                app:tint="@color/light_text_secondary"
                android:padding="10dp"
                android:contentDescription="Modifier" />

            <ImageButton
                android:id="@+id/btn_delete_incident"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                app:tint="@android:color/holo_red_dark"
                android:padding="10dp"
                android:contentDescription="Supprimer" />

            <!-- ESPACE FLEXIBLE -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- BOUTON VALIDER (CHECK) -->
            <ImageButton
                android:id="@+id/btn_validate_incident"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_check"
                app:tint="@android:color/holo_green_dark"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:contentDescription="Valider" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>