<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Barre de saisie/glissement -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- En-tÃªte : Infos Auteur -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sheet_img_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drag_handle"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent" />

        <TextView
            android:id="@+id/sheet_tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="#212121"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/sheet_tv_status"
            app:layout_constraintStart_toEndOf="@id/sheet_img_profile"
            app:layout_constraintTop_toTopOf="@id/sheet_img_profile"
            tools:text="Citoyen Vigilant" />

        <TextView
            android:id="@+id/sheet_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/sheet_tv_username"
            app:layout_constraintTop_toBottomOf="@id/sheet_tv_username"
            tools:text="ðŸš¨ Accident" />

        <!-- Badge de Statut -->
        <TextView
            android:id="@+id/sheet_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/status_new_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/sheet_tv_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sheet_tv_username"
            tools:text="Nouveau" />

        <!-- Corps : Description -->
        <TextView
            android:id="@+id/sheet_tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp"
            android:textColor="#424242"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sheet_img_profile"
            tools:text="Description complÃ¨te de l'incident avec les dÃ©tails nÃ©cessaires pour les autoritÃ©s." />

        <!-- Image de l'incident -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_incident_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/sheet_tv_description">

            <ImageView
                android:id="@+id/sheet_img_incident"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@drawable/ic_incident_placeholder"
                tools:visibility="visible" />
        </com.google.android.material.card.MaterialCardView>

        <!-- SÃ©parateur -->
        <View
            android:id="@+id/sheet_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0.1"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/card_incident_media" />

        <!-- Actions sociales -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sheet_divider">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"
                app:tint="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/sheet_tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#212121"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="12 J'aime" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:src="@android:drawable/stat_notify_chat"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/sheet_tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#212121"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="3 comm." />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>