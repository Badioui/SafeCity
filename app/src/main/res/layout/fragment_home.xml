<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg_primary">

    <!-- BARRE DE FILTRES (Haut de page) -->
    <HorizontalScrollView
        android:id="@+id/scroll_view_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filters_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tous"
                android:textColor="@android:color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_accident"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accident"
                android:textColor="@android:color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_vol"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vol"
                android:textColor="@android:color/black"/>

            <!-- REMPLACEMENT : Travaux -> Panne -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_panne"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panne"
                android:textColor="@android:color/black"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_incendie"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incendie"
                android:textColor="@android:color/black"/>

            <!-- AJOUT : Catégorie Autre -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_autre"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autre"
                android:textColor="@android:color/black"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- LISTE DES SIGNALEMENTS (Juste sous les filtres) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/scroll_view_filters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MESSAGE SI VIDE -->
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucun signalement.\nSoyez le premier à poster !"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/light_text_secondary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>